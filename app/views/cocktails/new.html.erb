<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">

      <div>
        <h1>Create a cocktail</h1>
        <p>Fill the form, if you want to create a cocktail, otherwise <%= link_to "Return to List", cocktails_path %></p>
      </div>

      <div>
        <%= simple_form_for(@cocktail) do |f| %>
          <%= f.input :name %>
          <%= f.submit "Create a cocktail", class: "btn btn-primary" %>
        <% end %>
      </div>

    </div>
  </div>
</div>
