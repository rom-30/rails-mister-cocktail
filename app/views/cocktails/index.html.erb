<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1557458249-1be70955065c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1956&q=80');">
  <div class="container">
    <h1> pick a cocktail</h1>
    <p>Feel free to select one of the cocktails below or make your own if you feel bold</p>
    <%= link_to "Make your own cocktail", new_cocktail_path, class: 'btn btn-primary' %>
  </div>


</div>

<div class="container">
  <div class="cards pt-3">
    <% Cocktail.order(:name).each do |cocktail| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1543479679-2ad5736490b6?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2089&q=80)">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </div>
    <% end %>
  </div>
</div>










